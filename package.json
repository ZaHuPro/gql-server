{
  "name": "gql-server",
  "version": "1.0.0",
  "description": "gql-server is backend service which provides all the essential data to the application",
  "main": "index.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "watch:build": "tsc --watch src/index.ts",
    "watch:server": "nodemon './dist/index.js' --watch './dist'",
    "watch:start": "npm-run-all clean --parallel watch:build watch:server --print-label",
    "build": "tsc",
    "server": "node ./dist/index.js",
    "start": "npm-run-all clean build server",
    "dev": "nodemon --config nodemon.json src/index.ts",
    "dev:debug": "nodemon --config nodemon.json --inspect-brk src/index.ts",
    "generate:keys": "node scripts/generateKeyPair.js",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:fix": "tslint --fix -c tslint.json 'src/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZaHuPro/gql-server.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ZaHuPro/gql-server/issues"
  },
  "homepage": "https://github.com/ZaHuPro/gql-server#readme",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/bluebird": "^3.5.36",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/ws": "^8.5.3",
    "nodemon": "^1.3.3",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.8.1",
    "tslint": "^6.1.3",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "apollo-server": "^3.9.0",
    "apollo-server-core": "^3.9.0",
    "apollo-server-express": "^3.9.0",
    "bcrypt": "^5.0.1",
    "bluebird": "^3.7.2",
    "commander": "^9.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.9.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.4.1",
    "morgan": "^1.10.0",
    "s": "^1.0.0",
    "subscriptions-transport-ws": "^0.11.0",
    "winston": "^3.8.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.8.0"
  }
}
